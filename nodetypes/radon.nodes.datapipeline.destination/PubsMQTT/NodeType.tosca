tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  radon.nodes.datapipeline.destination.PubsMQTT:
    derived_from: radon.nodes.datapipeline.destination.PublishRemote
    metadata:
      targetNamespace: "radon.nodes.datapipeline.destination"
      abstract: "false"
      final: "false"
    attributes:
      template_name:
        type: string
        default: "MQTT_dest_PG_LocalConn"
    properties:
      Broker_URI:
        type: string
        description: User can put the IP address in place or localhost and the configured port address of Mosquitto Broker.
        default: "tcp://localhost:1883"
      Username:
        type: string
        required: true
        status: supported
      Quality_of_Service:
        type: integer
        required: true
        status: supported
      Client_ID:
        type: string
        required: true
        status: supported
      Password:
        type: string
        required: true
        status: supported
      TopicName:
        type: string
        required: true
        status: supported
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          create:
            inputs:
              template_name:
                type: string
                required: true
                default: { get_attribute: [ SELF, template_name ] }
              template_file:
                type: string
                description: Dest xml File
                required: true
                default: "MQTT_dest_PG_LocalConn.xml"
            implementation:
              primary: create
              dependencies: [ templateFile_LocalConn ]
              timeout: 0
          configure:
            inputs:
              Broker_URI:
                type: string
                required: true
                default: { get_property: [ SELF, Broker_URI ] }
              Username:
                type: string
                required: true
                default: { get_property: [ SELF, Username ] }
              schedulingStrategy:
                type: string
                required: false
                default: { get_property: [ SELF, schedulingStrategy ] }
              schedulingPeriodCRON:
                type: string
                required: false
                default: { get_property: [ SELF, schedulingPeriodCRON ] }
              pipeline_id:
                type: string
                required: true
                default: { get_attribute: [ SELF, id ] }
              Quality_of_Service:
                type: integer
                required: true
                default: { get_property: [ SELF, Quality_of_Service ] }
              Client_ID:
                type: string
                required: true
                default: { get_property: [ SELF, Client_ID ] }
              Password:
                type: string
                required: true
                default: { get_property: [ SELF, Password ] }
              TopicName:
                type: string
                required: true
                default: { get_property: [ SELF, TopicName ] }
            implementation:
              primary: configure
              timeout: 0
    artifacts:
      templateFile_LocalConn:
        type: tosca.artifacts.File
        description: Dest Xml for Publish MQTT
        file: MQTT_dest_PG_LocalConn.xml
      create:
        type: tosca.artifacts.File
        description: Create Ansible Script
        file: create.yml
      configure:
        type: tosca.artifacts.File
        description: Configure Ansible Script
        file: configure.yml
