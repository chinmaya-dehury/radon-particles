tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  radon.nodes.datapipeline.source.ConsumeLocal_1.0-w1-wip1:
    derived_from: radon.nodes.datapipeline.source.ConsumeDataEndPoint_1.0-w1-wip2
    properties:
      directory:
        type: string
        description: Path to the file/folder
        required: true
        status: supported
    metadata:
      targetNamespace: radon.nodes.datapipeline.source
      abstract: no
      final: no
    requirements:
      - host:
          capability: tosca.capabilities.Container
          node: radon.nodes.nifi.Nifi
          relationship:
            type: tosca.relationships.HostedOn
          occurrences: [ 1, 1 ]
      - ConnectToPipeline:
          capability: radon.capabilities.datapipeline.ConnectToPipeline_w1-wip1
          node: radon.nodes.nifi.Nifi
          relationship:
            type: radon.relationships.datapipeline.ConnectNifiLocal_w1-wip1
          occurrences: [ 0, UNBOUNDED ]
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          stop:
            inputs:
              pipeline_id:
                type: string
                description: ID of the pipeline.
                required: true
                default: { get_attribute: [ SELF, id ] }
            implementation:
              primary: stop
              timeout: 0
          start:
            inputs:
              template_name:
                type: string
                description: Name of the template.
                required: true
                default: { get_property: [SELF, template_name] }
            implementation:
              primary: start
              timeout: 0
          create:
            inputs:
              template_name:
                type: string
                description: Name of the template.
                required: true
                default: { get_property: [SELF, template_name] }
              template_file:
                type: string
                description: Path to the template file.
                required: true
                default: { get_artifact: [SELF, templateFile_localConn, file] }
            implementation:
              primary: Create
              timeout: 0
          configure:
            inputs:
              directory:
                type: string
                description: Directory on local machine from where the data will be read.
                required: true
                default: { get_property: [ SELF, directory ] }
            implementation:
              primary: configure
              timeout: 0
          delete:
            inputs:
              pipeline_id:
                type: string
                description: ID of the pipeline
                required: true
                default: { get_attribute: [ SELF, id ] }
            implementation:
              primary: delete
              timeout: 0
    artifacts:
      templateFile_LocalConn:
        type: tosca.artifacts.File
        description: Nifi template to consume local data and send to local pipelines.
        file: ConsumeLocal_localConn.xml
      stop:
        type: tosca.artifacts.Implementation.Ansible
        description: Script to stop the pipeline.
        file: stop.yml
      Create:
        type: tosca.artifacts.Implementation.Ansible
        description: Script to create the pipeline
        file: create.yml
      start:
        type: tosca.artifacts.Implementation.Ansible
        description: Script to start the GetFile pipeline.
        file: start.yml
      templateFile_RmtConn:
        type: tosca.artifacts.File
        description: Nifi template to consume local data and send to remote pipelines.
        file: ConsumeLocal_RmtConn.xml
      configure:
        type: tosca.artifacts.Implementation.Ansible
        description: Script to configure the Nifi GetFile Processor
        file: configure.yml
      delete:
        type: tosca.artifacts.Implementation.Ansible
        description: Ansible script to delete the pipeline.
        file: delete.yml
